{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Celery Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A", "app.http.app.celery",
                "worker",
                "--loglevel=info"
            ],
            "cwd": "${workspaceFolder}/xiaohe-llmops-api",
            // "envFile": "${workspaceFolder}/.env",  // 可选：如果有环境变量文件
            "justMyCode": false,  // 允许调试第三方库代码（如 Celery 内部）
            "console": "integratedTerminal",  // 在集成终端中显示输出
            // "python": "${command:python.interpreterPath}"  // 使用当前选择的 Python 解释器
        },
        {
            "name": "flask run app",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "xiaohe-llmops-api/app/http/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                // "--no-debugger",
                // "--no-reload"
                "--port",
                "5006",
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "name": "Vite Dev Server (yarn dev)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["dev"],
            "cwd": "${workspaceFolder}/xiaohe-llmops-ui",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Launch Chrome for Frontend",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/xiaohe-llmops-ui/src",
            "sourceMaps": true
        }
    ]
}
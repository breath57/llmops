    "version": "0.2.0",
    "configurations": [
        {
            "name": "flask run app",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "imooc-llmops-api/app/http/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        // debug
        {
            "name": "debug flask run app",
            "request": "launch",
            "program": "imooc-llmops-api/app/http/app.py",
            "env": {
                "FLASK_APP": "imooc-llmops-api/app/http/app.py",
                "FLASK_DEBUG": "0"
            },
            "python": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "run",
                "--host",
                "0.0.0.0",
                "--port",
                "5000"
            ]
        }
    ]
}
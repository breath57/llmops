# LLMOps 项目环境变量配置模板
# 请将此文件复制为 .env 并根据实际情况修改配置值

# ============== 基础框架配置 ==============
# 关闭CSRF保护（开发环境）
WTF_CSRF_ENABLED=False

# ============== 数据库配置 ==============
# PostgreSQL 数据库连接（Docker环境会自动覆盖主机名）
SQLALCHEMY_DATABASE_URI=postgresql+psycopg2://llmops:llmops@localhost:5432/llmops
SQLALCHEMY_POOL_SIZE=30
SQLALCHEMY_POOL_RECYCLE=3600
SQLALCHEMY_ECHO=False

# ============== Redis 配置 ==============
# Redis连接配置（Docker环境会自动覆盖主机名）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_USE_SSL=False

# ============== Celery 配置 ==============
# Celery任务队列配置
CELERY_BROKER_DB=1
CELERY_RESULT_BACKEND_DB=1
CELERY_TASK_IGNORE_RESULT=False
CELERY_RESULT_EXPIRES=3600
CELERY_BROKER_CONNECTION_RETRY_ON_STARTUP=True

# ============== Weaviate 配置 ==============
# Weaviate向量数据库配置（Docker环境会自动覆盖主机名）
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080

# ============== OpenAI / LLM 配置 ==============
# OpenAI API密钥（必填）
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI API基础URL（可选，默认使用硅基流动）
OPENAI_API_BASE=https://api.siliconflow.cn/v1

# ============== 应用配置 ==============
# 辅助Agent应用ID
ASSISTANT_AGENT_ID=6774fcef-b594-8008-b30c-a05b8190afe6

# ============== 可选配置 ==============
# 应用端口配置（本地开发用）
PORT=5000

# 日志级别（可选：DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO
